@model MovieRank.Models.User

<h2> Login with your account </h2>
<form asp-controller="User" asp-action="Login" method="post">
    <div class="form-group">
        <label for="UserEmail">Correo Electrónico</label>
        <input type="email" class="form-control" id="UserEmail" name="UserEmail" required>
    </div>
    <div class="form-group">
        <label for="Password">Contraseña</label>
        <input type="password" class="form-control" id="Password" name="Password" required>
    </div>
    <div class="d-flex justify-content-center align-content-center pb-2 mb-5">
        <button type="submit" class="btn btn-primary pt-2" style="width: 50%">Iniciar Sesión</button>
    </div>
</form>